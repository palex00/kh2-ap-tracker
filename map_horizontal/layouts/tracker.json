// This is the horizontal layout
{
    "settings_popup": {
        "type": "array",
        "margin": "5",
        "content": [
            {
                "type": "group",
                "header": "Settings",
                "dock": "top",
                "content": {
                    "type": "layout",
                    "key": "settings_grid"
                }
            }
        ]
    },
    "tracker_default": {
        "type": "container",
        "background": "#00000000",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "bottom",
                    "v_alignment": "stretch",
                    "content": [
                        {
                            "type": "group",
                            "header": "Important Items",
                            "dock": "left",
                            "content": {
                                "type": "layout",
                                "key": "items_horizontal"
                            }
                        },
                        {
                            "type": "group",
                            "header": "Abilities",
                            "dock": "left",
                            "content": {
                                "type": "layout",
                                "key": "abilities_horizontal"
                            }
                        }
                    ]
                },
                {
                    "type": "dock",
                    "content": {
                        "type": "layout",
                        "key": "tabbed_maps"
                    }
                }
            ]
        }
    }
}